<html>
    <head>
        <title><%= title %></title>
        <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" >
  <link href="/assets/css/style2.css" rel="stylesheet" type="text/css" >
     
    </head>
    <body>

      <!-- addition  of navbar -->
        <%- include('./partials/navbar') %>
      <!-- End of navbar -->
      <!-- begin side bar  -->
      <br><br>
        <div class="section">
            <div class="row">
                <div class="col-sm-2"  >
                
                   <%- include('./partials/sidebar') %>
                
            </div>
                <div class="col-sm-10"  >
                    <div class="content">
                        <div class="container"><br><br>
                            <div class="row">
                              <div class="col-sm-6">
                                <div class="float-left">
                                  <h4>Landing Page update</h4>
                                </div>
                              </div>

                              <div class="col-sm-6">
                                <div class="float-right">
                                  <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" >Upload a Landing Page</button>
                               
                                  <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h5 class="modal-title" id="exampleModalLongTitle">Landing Page Update</h5>
                                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                          </button>
                                        </div>
                                        <div class="modal-body">
                                          <form action="/admin/landingpage" method="post" required enctype="multipart/form-data" >
                                            <div class="form-group">
                                              <label for="exampleInputEmail1">Tag</label>
                                              <input type="text" class="form-control" name="tag" required  id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter the tagline">
                                             
                                            </div>
                                            <div class="form-group">
                                              <label for="exampleInputPassword1">Title</label>
                                              <input type="text" name="title"  class="form-control" required id="exampleInputPassword1" placeholder="Title">
                                            </div>

                                            <div class="form-group">
                                              <label for="exampleInputPassword1">action</label>
                                              <input type="text" name="action"  class="form-control" required id="exampleInputPassword1" placeholder="Action">
                                            </div>

                                            <div class="form-group">
                                              <label for="exampleFormControlTextarea1">Example textarea</label>
                                              <textarea class="form-control" name="message" required id="exampleFormControlTextarea1" rows="3"></textarea>
                                            </div>

                                            <div class="form-group">
                                              <label for="exampleFormControlFile1">Upload Image (1800 X 1350)</label>
                                              <input type="file" class="form-control-file" name="image" required id="exampleFormControlFile1">
                                            </div>
                                           
                                            <button type="submit" class="btn btn-primary float-right">Submit</button>
                                          </form>
                                        </div>
                                       
                                      </div>
                                    </div>
                                  </div>
                               
                                </div>
                              </div><hr>
                              <div class="line">
                                
                              </div>
                              <div class="hide"></div>
                              <div class="row" >

                                <% for(var i = 0; i< landing.length; i++){ %>
                                  <div class="col-sm-3">
                                    <div class="shadow p-3 bg-white rounded">
                                      <div class="card" >
                                        <img src="<%= landing[i].image.slice(8) %>" class="card-img-top" alt="...">
                                        <div class="card-body" style="margin-left:-10px;margin-top:-10px;">
                                          <p class="align-left" style="font-weight:600;font-size: 13px;"><%= landing[i].title %> </p>
                                          <button class="float-left btn btn-success " data-toggle="modal" data-target="#exampleModalLonger<%= landing[i]._id %>" style="font-size:12px;" >Edit Post</button>
                                          <button class="float-right btn btn-danger "  data-toggle="modal" data-target="#popup<%= i + landing.length %>" style="font-size:12px;" >Delete Post</button>
                                        </div>
                                      </div>
                                    </div><br>
                                  </div>

                                  <div class="modal fade" id="exampleModalLonger<%= landing[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                      <div class="modal-content">
                                        <div class="modal-header">
                                          <h5 class="modal-title" id="exampleModalLongTitle">Landing Page Update</h5>
                                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                          </button>
                                        </div>
                                        <div class="modal-body">
                                          <form action="/admin/landingpage/<%= landing[i]._id %>" method="post" required  >
                                            <div class="form-group">
                                              <label for="exampleInputEmail1">Tag</label>
                                              <input type="text" class="form-control" name="tag" required  id="exampleInputEmail1" value="<%= landing[i].tag %>" aria-describedby="emailHelp" placeholder="Enter Tag ">
                                             
                                            </div>
                                            <div class="form-group">
                                              <label for="exampleInputPassword1">Title</label>
                                              <input type="text" name="title"  class="form-control" required id="exampleInputPassword1" value="<%= landing[i].title %>" placeholder="Title">
                                            </div>
  
                                            <div class="form-group">
                                              <label for="exampleInputPassword1">action</label>
                                              <input type="text" name="action"  class="form-control" required id="exampleInputPassword1" value="<%= landing[i].action %>" placeholder="Actio">
                                            </div>
  
                                            <div class="form-group">
                                              <label for="exampleFormControlTextarea1">Example textarea</label>
                                              <textarea class="form-control" name="message" required id="exampleFormControlTextarea1" rows="3"></textarea>
                                            </div>
  
                                           
                                           
                                            <button type="submit" class="btn btn-primary float-right">Submit</button>
                                          </form>
                                        </div>
                                       
                                      </div>
                                    </div>
                                  </div>


                                                 
                            <div class="modal fade" id="popup<%= i+ landing.length  %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitles" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content" style="padding:5%">
                                  <h4 style="font-weight:bold; text-align:center">Do you want to Delete this post ?</h4><br>
                                 <center> 
                                      <form action="/admin/landingDelete/<%= landing[i].id %>" method="post">
                                            <input type="hidden">
                                            <button class="btn btn-danger"  style="padding:10px 30px;" type="submit">Yes</button>  
                                      </form>
                                </center>
                                </div>
                              </div>
                            </div>

                            
                                <% } %>
                                
                               
                        


                               

                               
                               


                                
                               
                             
                                
                                
                              </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

       
      <!-- end of sidebar -->
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>